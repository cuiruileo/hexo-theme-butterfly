    .framework-info
      span= `${theme.footer_contact.info_1.text}` + ': '
      a(href=url_for(theme.footer_contact.info_1.url))
        span= `${theme.footer_contact.info_1.mail}` + ' | '
      span= `${theme.footer_contact.info_2.text}` + ': '
      a(href=url_for(theme.footer_contact.info_2.url))
        span= `${theme.footer_contact.info_2.mail}` + ' | '
      span= `${theme.footer_contact.info_3.text}` + ': '
      a(href=url_for(theme.footer_contact.info_3.url))
        span= `${theme.footer_contact.info_3.mail}`
